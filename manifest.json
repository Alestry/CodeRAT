{

  "manifest_version": 3,
  "name": "Metrics Collection",
  "version": "0.1",
  "description": "Collects different metrics about code review sessions on GitHub.",

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": [ "collectors.js" ]
    }
  ],

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "action": {
    "default_popup": "ui.html",
    "default_icon": {
      "48": "icons/border-48.png"
    }
  }

}